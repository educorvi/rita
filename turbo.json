{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build:internal": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build:internal"]
    },
    "check-types": {
      "dependsOn": ["^check-types", "^build:internal"]
    },
    "test": {
      "dependsOn": ["build:internal"],
      "outputs": []
    },
    "doc": {
      "dependsOn": ["build:internal"],
      "outputs": ["docs/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
