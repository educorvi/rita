{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "ES6",
        "noImplicitAny": true,
        "moduleResolution": "bundler",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*", "test/**/*", "vite.config.ts"]
}
