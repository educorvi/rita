{
  "name": "@educorvi/rita",
  "description": "JSON Schema for rule-based evaluation and an Typescript Implementation to evaluate it",
  "version": "3.1.2",
  "license": "MIT",
  "main": "dist/rita.cjs.min.js",
  "module": "dist/rita.esm.min.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "src/schema"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prepack": "yarn build",
    "clean": "rimraf dist dist_zip",
    "build": "pnpm run clean && rollup --config",
    "test": "jest",
    "lint": "prettier -w src",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "semantic-release": "semantic-release",
    "doc": "yarn run doc:implementation && doc:schema && git add docs",
    "doc:implementation": "npx typedoc --out docs/implementation src/index.ts",
    "doc:schema": "jsonschema2md -d src/schema -o docs/schema -e json -x -"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "es5"
  },
  "author": "Julian Pollinger",
  "size-limit": [
    {
      "path": "dist/rita.cjs.min.js",
      "limit": "100 KB"
    },
    {
      "path": "dist/rita.esm.min.js",
      "limit": "100 KB"
    }
  ],
  "devDependencies": {
    "@adobe/jsonschema2md": "^7.0.0",
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@types/deep-equal": "^1.0.1",
    "@types/jest": "^27.0.3",
    "@types/luxon": "^2.0.8",
    "@types/madge": "^5.0.0",
    "jest": "^27.4.5",
    "jest-extended": "^2.0.0",
    "madge": "^5.0.1",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^2.0.5",
    "ts-jest": "^27.0.7",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "luxon": "^2.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/educorvi/rita.git"
  },
  "bugs": {
    "url": "https://github.com/educorvi/rita/issues"
  }
}
