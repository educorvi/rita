{
  "version": "3.0.0",
  "name": "@educorvi/persistent-rita",
  "author": "Julian Pollinger",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/persistent-rita.cjs.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prepack": "yarn build",
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "test": "jest",
    "lint": "prettier -w src",
    "size": "size-limit",
    "semantic-release": "semantic-release",
    "doc": "npx typedoc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "es5"
  },
  "module": "dist/persistent-rita.esm.min.js",
  "size-limit": [
    {
      "path": "dist/persistent-rita.cjs.min.js",
      "limit": "300 KB"
    },
    {
      "path": "dist/persistent-rita.esm.min.js",
      "limit": "300 KB"
    }
  ],
  "devDependencies": {
    "@educorvi/rita": "^3.1.1",
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/jest": "^27.0.3",
    "dotenv": "^16.0.1",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^2.0.5",
    "ts-jest": "^27.0.7",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/educorvi/persistent-rita"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "peerDependencies": {
    "@educorvi/rita": "3.x",
    "mysql2": "^2.3.3",
    "pg": "^8.7.1",
    "sqlite3": "^5.0.6",
    "typeorm": "^0.3.4"
  }
}
